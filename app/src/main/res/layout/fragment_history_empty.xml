<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    tools:context=".fragments.HistoryEmptyFragment">


    <FrameLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_background"
        android:backgroundTint="@color/purple">


        <TextView
            android:id="@+id/no_reservation_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:text="No active reservations" />
        <TextView
            android:id="@+id/textView40"
            android:layout_width="250dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="31dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="54dp"
            android:text="Once a table has been booked, the current bookings will appear here." />


    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/button_shape"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="Find a reservation" />




</LinearLayout>