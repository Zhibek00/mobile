<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/border_rounded"
    android:layout_margin="20dp"
    tools:context=".fragments.LogOutMessageDialog">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yes_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Yes, sure"
        android:textStyle="bold"
        android:background="@drawable/small_rounded"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="No!"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/small_rounded"

        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/grey_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/yes_btn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="270dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Are you sure you want to log out the profile?"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>