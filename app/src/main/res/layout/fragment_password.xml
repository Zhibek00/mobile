<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="30dp"
    tools:context=".fragments.CardFragment">

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp"
        android:text="Change Password"
        android:textSize="22sp"
        android:textStyle="bold"

        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="27dp" />
    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current password"
        android:textSize="16dp"

        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="66dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_text_input_layout0"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        style="@style/text_input_greeting"

        android:textColorHint="@color/grey_0"
        app:hintEnabled="false"

        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/current_password"
            android:textSize="16sp"
            android:maxLength="11"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="24dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="Enter your password"
            android:textColorHint="@color/grey_0"
            android:background="@drawable/border_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:layout_marginTop="6dp"
        android:textSize="16dp"

        android:textColor="@color/red"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="220dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New password"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="14dp"

        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="220dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_text_input_layout1"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        style="@style/text_input_greeting"
        android:textColorHint="@color/grey_0"

        android:layout_marginBottom="10dp"
        app:hintEnabled="false"

        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/new_password"
            android:textSize="16sp"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingStart="24dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="Enter your password"
            android:textColorHint="@color/grey_0"
            android:background="@drawable/border_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm new password"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"

        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="386dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_text_input_layout2"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        style="@style/text_input_greeting"
        android:textColorHint="@color/grey_0"
        app:hintEnabled="false"

        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/confirm_password"
            android:textSize="16sp"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingStart="24dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="Enter your password"
            android:textColorHint="@color/grey_0"
            android:background="@drawable/border_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>






    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save"
        android:layout_marginTop="26dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"
        android:textStyle="bold"
        />


</LinearLayout>