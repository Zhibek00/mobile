<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RestaurantApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
       \

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/dmsans_36pt_regular</item>
        <!-- Change the default text color -->
        <item name="android:textAllCaps">false</item>
        <item name="colorButtonNormal">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#666666</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <!-- Other theme attributes -->
        <item name="android:textViewStyle">@style/TextAppearance</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>

    </style>


    <style name="CustomHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item> <!-- Adjust text size as needed -->
        <!-- Add any other desired attributes -->
    </style>

    <style name="text_input_greeting" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"></style>

    <style name="TextAppearance">
        <item name="android:letterSpacing">0.07
        </item> <!-- Change the value according to your preference -->
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorControlActivated">#807B66FF</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textStyle">bold</item>


    </style>


    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="CustomCalendarDateTextAppearance" parent="@android:style/TextAppearance.Medium">
        <!-- Customize the text size -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

        <!-- Adjust the text size as needed -->
        <!-- Add any other text appearance attributes you want to customize -->
    </style>

    <style name="CustomMonthTextAppearance" parent="@android:style/TextAppearance.DeviceDefault">
        <!-- Set text size to 16sp -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_0</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>


    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.RestaurantApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RestaurantApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RestaurantApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>