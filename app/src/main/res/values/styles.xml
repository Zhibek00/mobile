<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Border" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/border</item>
    </style>
    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Set the icon tint color for unselected icons -->
        <item name="itemIconTint">@color/green_1</item>
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item> <!-- Set the desired text size here -->
    </style>
    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/dialog_rounded_background</item>
    </style>
</resources>