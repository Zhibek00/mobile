<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer for the border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Black color for the border -->
            <corners android:radius="5dp" />
            <size android:width="100dp" android:height="8dp" /> <!-- Size of the star -->
        </shape>
    </item>
    <!-- Filled star layer -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">

            <shape android:shape="rectangle">
                <solid android:color="@color/blue" /> <!-- Filled star color -->
                <corners android:radius="5dp" />
                <size android:width="0dp" android:height="4dp" /> <!-- Size of the star -->
            </shape>

    </item>
</layer-list>
